{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended",
        "plugin:functional/external-recommended"
        // "plugin:functional/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "@typescript-eslint", "functional"],
    "rules": {
        "functional/immutable-data": "error",
        "functional/no-let": "error",
        "functional/no-method-signature": "error",
        "functional/prefer-readonly-type": "error",
        "functional/no-class": "error",
        "functional/no-this-expression": "error",
        "functional/prefer-type-literal": "error",
        "functional/no-conditional-statement": "error",
        "functional/no-loop-statement": "error",
        // "functional/no-return-void": "error",
        "functional/no-promise-reject": "error",
        "functional/no-throw-statement": "error",
        "functional/no-expression-statement": [
            "error",
            {
                "ignorePattern": ["^use", "^set", "^console","^on"]
            }
        ],
        "functional/functional-parameters": [
            "error",
            {
                "enforceParameterCount": {
                    "count": "atLeastOne",
                    "ignoreIIFE": false
                },
                "ignorePattern": ["^tsInstalled$", "^[A-Z][a-z0-9]"]
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
